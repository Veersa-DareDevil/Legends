{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "types": [
      "node",
      "playwright/test"
    ],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@pageObjects/*": [
        "src/pageObjects/*"
      ]
    }
  },
  "include": [
    "specs/**/*.spec.ts",
    "src/**/*.ts",
    "src/**/*.json"
  ]
}